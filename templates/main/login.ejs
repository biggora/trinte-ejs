<% layout('./errors/_layout') -%>
<div class="container">
    <div class="row">
        <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-lg-6 col-sm-8 col-md-6" style="margin-top:100px">
            <form class="form" role="form" method="POST" action='/login'>
                <div class="login-header">
                    <h2 style="text-align:center;color:#333333;"><i class="fa fa-unlock-alt"></i> <?= pack ?></h2>
                </div>
                <div class="form-group col-lg-12 col-sm-12 col-md-12">
                    <label for="login">Login</label>
                    <input required name="login" type="text" class="form-control" id="login" placeholder="Enter login">
                </div>
                <div class="form-group col-lg-12 col-sm-12 col-md-12">
                    <label for="password">Password</label>
                    <div class="">
                        <input required name='password' type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                </div>
                <div class="clearfix"><br/></div>
                <div class="col-xs-12 col-lg-6 col-sm-6" style="text-align:center">
                    <a href="/" class="btn btn-md btn-block btn-default"><i class="fa fa-home"></i> Back to home</span></a>
                </div>
                <br class="hidden-lg hidden-md hidden-sm"/>
                <div class="col-xs-12 col-lg-6 col-sm-6" style="text-align:center">
                    <button class="btn btn-md btn-block btn-primary" type="submit"><i class="fa fa-sign-in"></i> Sign in</button>
                    <!-- <button class="btn btn-md btn-block btn-default" type="clear"><i class="fa fa-times"></i> Clear</button> -->                    
                </div>
                <input type="hidden" name="_csrf" value="<%= request.csrfToken() %>"/>
            </form>
            <div class="clearfix"><br/></div>
        </div>
    </div>

    <div class="row" style="margin-top: 150px">
        <footer id="footer">
            <p style="text-align: center;font-size: 10px;color: #ccc">
                Based on <a href="http://www.trintejs.com/" target="_new" style="color: #ccc">TrinteJS</a> & Cross-db ORM <a href="http://www.camintejs.com/" target="_new" style="color: #ccc">CaminteJS</a>
            </p>
        </footer>
    </div>
</div>