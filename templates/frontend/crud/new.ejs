<% layout('../_layout') -%>
<?
var modelVariable = modelName.toLowerCase();
var basePath = modelName.toLowerCase();
var basePathPlural = controllerName.toLowerCase();
var addIncl = namespace && namespace !== "" ? "../" : "" ;
var nsPath = namespace && namespace !== "" ? namespace + "_" : "" ;
var rootPath = namespace && namespace !== "" ? "/" + namespace : "/" ;
?>
<!-- new page -->
<div id="content" class="container">
    <!-- page breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="<?= rootPath ?>"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="<%- pathTo.<?= nsPath ?><?= basePathPlural ?>() %>"><?= controllerName ?></a></li>
        <li class="active"><a href="#"><%- title %></a></li>
    </ul>
    <!-- page title -->
    <div class="page-header">
        <h2>
			<span class="fa-stack">
				<i class="fa fa-circle fa-stack-2x"></i>
				<i class="fa fa-pencil-square-o fa-stack-1x fa-inverse"></i>
			</span>
            <%- title %>
        </h2>
    </div>
    <!-- form -->
    <form id="editor" name="editor" method="POST" action="<%- pathTo.create_<?= nsPath ?><?= basePathPlural ?>() %>" class="form-horizontal" role="form">
        <input type="hidden" name="_method" value="POST"/>
		<input type="hidden" name="_action" value="save"/>
        <%- partial('form',{ locals : { <?= modelVariable ?> : <?= modelVariable ?> } }) %>
        <div class="well">
            <div class="col-lg-12">
				<a href="javascript:void(0);" onClick="document.forms.editor._action.value='copy';document.forms.editor.submit()" class="btn btn-default">
                    <i class="fa fa-files-o"></i>
                    Save & Copy
                </a>
                <a href="javascript:void(0);" onClick="document.forms.editor._action.value='new';document.forms.editor.submit()" class="btn btn-default">
                    <i class="fa fa-files-o"></i>
                    Save & New
                </a>
                <a href="javascript:void(0);" onClick="document.forms.editor._action.value='apply';document.forms.editor.submit()" class="btn btn-default">
                    <i class="fa fa-check"></i>
                    Apply
                </a>
                <a href="javascript:void(0);" onClick="document.forms.editor._action.value='save';document.forms.editor.submit()" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Save
                </a>
                <a href="<%- pathTo.<?= nsPath ?><?= basePathPlural ?>() %>" class="btn btn-default button-cancel">
                    <i class="fa fa-tasks"></i>
                    Cancel
                </a>
            </div>
            <div class="clearfix"></div>
        </div>
    </form>
</div>
<!-- end new page -->
